<%-include('./shared/header.ejs')%>
<section class="post container my-5">
    <div class="postForm w-75 my-auto">
        <form method="POST" action="/post" enctype="multipart/form-data">
            <h2 class="text-center my-2">Create Post</h2>
<div class="form-group my-2">
    <input type="text" class="form-control" name="title" placeholder="Title">
</div>
<div class="form-group my-2">
    <input type="text" class="form-control" name="desc" placeholder="description">
</div>
<div class="form-group my-2">
    <input type="file" class="form-control" name="image" >
</div>
<div class="form-group my-2">
    <button type="submit" class="btn btn-info w-100" >Add Post</button>
</div>

        </form>
    </div>
</section>
<section class="container mb-2">
    <div class="row d-flex justify-content-center align-items-center">
                <% for( let i = 0; i < postList.length; i++ ) { %>
                    <img src="http://localhost:3000/<%=postList[i].imageurl%>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title"><%=postList[i].title%></h5>
                      <p class="card-text"><%=postList[i].desc%></p>
                      <a href="/updatepost/<%= postList[i]._id%>" class="btn btn-primary">update</a>
                      <a href="/delete/<%= postList[i]._id%>" class="btn btn-danger my-2">delete</a>

                    </div>
                <% } %> 
        </div>
    </div>
</section>
<%-include('./shared/footer.ejs')%>
